{
  "name": "@shamavision/ai-workflow-rules",
  "version": "9.1.1",
  "description": "AI workflow rules framework for Claude Code and Cursor. Session management, token optimization, security guards, AI protection (prompt injection + PII detection). Made in Ukraine.",
  "keywords": [
    "ai",
    "workflow",
    "rules",
    "claude",
    "cursor",
    "coding-assistant",
    "productivity",
    "token-management",
    "security",
    "ukraine"
  ],
  "main": "bin/cli.js",
  "bin": {
    "ai-workflow-rules": "./bin/cli.js"
  },
  "files": [
    "bin/",
    "npm-templates/"
  ],
  "scripts": {
    "test": "node bin/cli.js --help",
    "token-status": "bash scripts/token-status.sh || pwsh scripts/token-status.ps1 || powershell scripts/token-status.ps1",
    "token-log": "bash scripts/token-log.sh",
    "token-add": "bash scripts/token-log.sh add",
    "token-reset": "bash scripts/token-log.sh reset",
    "session": "bash scripts/ai-session.sh",
    "session-stats": "bash scripts/ai-session.sh stats",
    "estimate-tokens": "bash scripts/estimate-tokens.sh",
    "providers": "cat .ai/docs/provider-comparison.md",
    "check-links": "bash scripts/check-links.sh",
    "cleanup-root": "bash scripts/cleanup-root.sh",
    "validate-structure": "bash scripts/validate-structure.sh",
    "verify-templates": "bash scripts/verify-templates.sh",
    "compare-contexts": "bash scripts/context-diff.sh",
    "sync-rules": "bash scripts/sync-rules.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shamavision/ai-workflow-rules.git"
  },
  "bugs": {
    "url": "https://github.com/Shamavision/ai-workflow-rules/issues"
  },
  "homepage": "https://github.com/Shamavision/ai-workflow-rules#readme",
  "author": "Shamavision <shamavision@wellme.ua>",
  "license": "GPL-3.0",
  "dependencies": {
    "inquirer": "^8.2.6",
    "fs-extra": "^11.2.0",
    "chalk": "^4.1.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
