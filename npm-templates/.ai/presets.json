{
  "_comment": "AI Workflow Rules — Tool Presets v1.1",
  "_note": "session_limit = context window per conversation. daily_message_* = behavioral limits (estimates, not published by providers). No pricing — check your dashboard.",
  "_updated": "2026-02-24",
  "version": "1.1",

  "mappings": {
    "_note": "Key format: provider.plan (lowercase). daily_message overrides inherit from billing_types defaults if not specified here.",

    "anthropic.free":     { "billing": "subscription", "session_limit": 200000 },
    "anthropic.pro":      { "billing": "subscription", "session_limit": 200000 },
    "anthropic.team":     { "billing": "subscription", "session_limit": 200000, "daily_message_soft_limit": 150, "daily_message_hard_limit": 200 },
    "anthropic.api":      { "billing": "billing",      "session_limit": 200000 },

    "google.free":        { "billing": "subscription", "session_limit": 1000000 },
    "google.advanced":    { "billing": "subscription", "session_limit": 1000000 },
    "google.api":         { "billing": "billing",      "session_limit": 1000000 },

    "cursor.free":        { "billing": "subscription", "session_limit": null },
    "cursor.pro":         { "billing": "subscription", "session_limit": null },
    "cursor.business":    { "billing": "subscription", "session_limit": null },

    "openai.free":        { "billing": "subscription", "session_limit": 128000 },
    "openai.plus":        { "billing": "subscription", "session_limit": 128000 },
    "openai.api":         { "billing": "billing",      "session_limit": 128000 },

    "deepseek.api":       { "billing": "billing",      "session_limit": 128000 },
    "groq.free":          { "billing": "billing",      "session_limit": 32768 },
    "mistral.api":        { "billing": "billing",      "session_limit": 128000 },

    "perplexity.free":    { "billing": "subscription", "session_limit": null },
    "perplexity.pro":     { "billing": "subscription", "session_limit": null },

    "other.default":      { "billing": "subscription", "session_limit": null, "daily_message_soft_limit": 60, "daily_message_hard_limit": 100 }
  },

  "billing_types": {
    "subscription": {
      "daily_limit": null,
      "daily_note": "Fair use subscription — new day = fresh limits. Exact daily limit not published by provider.",
      "daily_message_soft_limit": 80,
      "daily_message_hard_limit": 120,
      "daily_message_note": "Message limits are behavioral estimates (not published). Based on Claude Pro fair use patterns. Override per plan in mappings.",
      "session_thresholds": {
        "green":    0.50,
        "yellow":   0.70,
        "red":      0.90,
        "critical": 0.95
      }
    },
    "billing": {
      "daily_limit": null,
      "daily_note": "API billing — monitor costs via provider dashboard.",
      "daily_message_soft_limit": null,
      "daily_message_hard_limit": null,
      "daily_message_note": "API billing — no message count limit. Cost is the primary metric.",
      "session_thresholds": {
        "green":    0.50,
        "yellow":   0.70,
        "red":      0.90,
        "critical": 0.95
      }
    }
  },

  "default": {
    "billing": "subscription",
    "session_limit": null,
    "daily_note": "Unknown provider — limits not available. Configure manually in .ai/token-limits.json"
  }
}
